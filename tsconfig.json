{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowJs": true,
    "noEmit": true,
    "removeComments": true,
    "module": "es2020",
    "outDir": "./dist",
    "lib": ["es2020", "es2020.promise", "es2020.string"],
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
